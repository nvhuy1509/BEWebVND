                                            <div class="invalid-feedback">Bạn cần điền mật khẩu.</div>
                                        </div>
                                        <div class="container-login100-form-btn">
                                            <button class="login100-form-btn btn-warning ">
                                                Đăng ký
                                            </button>
                                        </div>
                                        <div class="text-center pt-3">
                                            <p class="text-dark mb-0">Đã có tài khoản?<a href="@Url.Action("Index")" class="text-primary ms-1">Đăng nhập</a></p>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
                <!-- CONTAINER CLOSED -->
            </div>
