    </div>
    <script type="text/javascript">


        window.addEventListener('load', function () {
            console.log("tesst")
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    event.preventDefault();
                    event.stopPropagation();
                    if (form.checkValidity() === true) {
                        if ($("#txtPassword").val() == $("#txtPasswordReapet").val()) {
                            console.log("khớp mật khẩu");
                            Reg();
                        } else {
                            console.log("không khớp mật khẩu");
                            not_mess("không khớp mật khẩu!");
                        }
                    }
                    else {

                    }

                    form.classList.add('was-validated');
                }, false);
            });
        }, false);



          function Reg() {
        let username = document.getElementById("txtUsername").value;
        let password = document.getElementById("txtPassword").value;
        let param = {
            'username': username,
            'password': password
        };
              $("#btnLogin").toggleClass("btn-loading");
              var lowerCaseLetters = /[a-z]/g;
              var upperCaseLetters = /[A-Z]/g;
              var numbers = /[0-9]/g;
              if (!password.match(lowerCaseLetters)) {
                  not_mess("Mật khẩu phải có ít nhất 1 chữ cái thường");
              } else if (!password.match(upperCaseLetters)) {
                  not_mess("Mật khẩu phải có ít nhất 1 chữ cái hoa");
              } else if (!password.match(numbers)) {
                  not_mess("Mật khẩu phải có ít nhất 1 số");
              } else if (password.length<6) {
                  not_mess("Mật khẩu phải có ít nhất 6 kí tự");
              } else {
                $.ajax({
            type: 'POST',
            url: "@Url.Action("Reg")",
            data: param,
            async: true,
            success: function (data) {
                console.log("data", data)
                // Utils.UnLoading();
                if (data.isSuccess) {
                    console.log(data.isSuccess);
                    swal("Đăng ký thành công!");

                            document.querySelectorAll('.confirm').forEach(item => {
                                item.addEventListener('click', event => {
                                    console.log("ahihi");
                                    location.href = '@Url.Action("Index","Auth")';
                                })
                            })
                }
                else {
                    $("#btnLogin").toggleClass("btn-loading");
                    /*notifyError(data.errorMessage);*/
                    not_mess(data.errorMessage);
                }
            }

                });
              }


    }
    </script>
