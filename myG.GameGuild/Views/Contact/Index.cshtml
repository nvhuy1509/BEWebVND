    <script>
        function sendMail() {
            var lstInter = []
            $("input:checkbox[name=interested]:checked").each(function() {
				lstInter.push($(this).next('label').text());
			});

            var fullname = document.getElementById("fullname").value;
            var email = document.getElementById("email").value;
            var phone = document.getElementById("phone").value;
            var subject = document.getElementById("subject").value;
            var description = document.getElementById("description").value;

            console.log('send mail===============');
            console.log(lstInter);
            
            if (fullname == "") {
                alert("Cần điền thông tin tên của bạn");
            } else if (email == "") {
                alert("Cần điền thông tin email của bạn");
            } else if (phone == "") {
                alert("Cần điền thông tin số điện thoại của bạn");
            } else if (lstInter.length == 0) {
                alert("Hãy chọn các mục bạn quan tâm");
            } else {
                if (subject == "") {
                    subject = "MMC FeedBack";
                }

                 var content = "";
                content += "Name: " + fullname + ".\n" ;
                content += "Email: " + email  + ".\n";
                content += "Phone Number: " + phone  + ".\n";
                content += "Interested in: ";
                for (let i = 0; i < lstInter.length;i++) {
                    if (i < lstInter.length - 1) {
                        content += lstInter[i] + ",";
                    } else {
                        content += lstInter[i] + ".\n";
                    }
                
                }
                content += "Description:" + description;
            
                console.log("content====");
                console.log(content)
                
                document.getElementById("formContact").reset();
                var param = {
                        'ToEmail': 'business@mymoney.credit', // địa chỉ mail nhận feedback
                        'Subject': subject,
                        'Body': content,
                        'Attachments': null,
                        'Name': fullname,
                        'Mail': email,
                        'Phone': phone
                    }
             
                console.log('param===============');
                console.log(param);
                $.ajax({
                    type: 'POST',
                    url: "@Url.Action("SendMail")",
                    data: param,
                    async: true,
                    success: function (data) {
                        console.log("data", data)
                        if (data.isSuccess) {
                            alert('Gửi phản hồi thành công');
                            document.getElementById("formContact").reset();
                        }
                        else {
                            alert("Lỗi gửi mail" +data.errorMessage);
                        }
                    }
                });
            }

        }

