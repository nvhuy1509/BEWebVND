    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <script>
        $(document).ready(function() {
            const textEl = document.querySelectorAll('.banner-text-mid')
            for (let i = 0; i < textEl.length; i++) {
                const text = textEl[i].innerText;
                textEl[i].innerText = '';
                const textArr = text.split(" ");
                textArr.map((item, index) => {
                    const newEl = document.createElement("span");
                    newEl.innerText = item;
                    if ((index + 1) % 2 !== 0) {
                        newEl.style.color = '#0765FF'
                    }
                    textEl[i].appendChild(newEl);
                })
            }
            
            const textEl1 = document.querySelectorAll('.thumb-title')
            for (let i = 0; i < textEl1.length; i++) {
                const text1 = textEl1[i].innerText;
                textEl1[i].innerText = '';
                const textArr1 = text1.split(" ");
                textArr1.map((item, index) => {
                    const newEl1 = document.createElement("span");
                    newEl1.innerText = item;
                    if ((index + 1) % 2 !== 0) {
                        newEl1.style.color = '#0765FF'
                    }
                    textEl1[i].appendChild(newEl1);
                })
            }
            
        });
    </script>
  </head>
  <body>
    <div class="wrapper">
        <header >
            <div class="header-solution">
                <a id="logoHeader" href="@Url.Action("Index","Home")" class="logo">
                  <img src="./images/PC_solution/logo-desktop.svg" class="visible-lg logo-desktop" alt="" />
                  <img src="./images/PC_solution/logo_mb.svg" class="visible-s" alt="" />
                </a>
                <div id="imgBarHeader" class="header-bar visible-s">
                  <img src="./images/PC_index/icon-bar.svg" alt="" />
                </div>
                <div class="header-fixed">
                  <ul class="menu">
                    <li class="menu-item">
                        <i class="fa fa-times close-header-fixed visible-s"></i>
                    </li>
                    <li class="menu-item">
                      <a href="@Url.Action("Index","Home")" class="menu-link menu-solution menu-active "
                        >Home</a
                      >
                    </li>
                    <li class="menu-item">
                      <a href="@Url.Action("Index","Solution")" class="menu-link menu-solution-active menu-active actived" >Solutions</a>
                    </li>
                    <li class="menu-item">
                      <a
                        target="_blank" href="https://docs.mymoney.credit/"
                        class="menu-link menu-solution menu-active menu-borrowers"
                        >Docs
                      </a>
                    </li>
                    <li class="menu-item">
                      <a href="@Url.Action("Index","News")" class="menu-link menu-solution menu-active">Blog</a>
                    </li>
                    <li class="menu-item">
                      <a href="@Url.Action("Index","Contact")" class="menu-link menu-solution menu-active ">Contact</a>
                    </li>
                  </ul>
                  <ul class="header-cta">
                    <li class="header-cta-item">
                      <form action="">
                        <input type="text" placeholder="" class="visible-s" />
                        <button><i class="fas fa-search"></i></button>
                      </form>
                    </li>
                    <li class="header-cta-item">
                      <button onclick="changeLanguage()">
                        <span id="language">EN</span>
                      </button>
                    </li>
                    <li class="header-cta-item">
                      <button>Register</button>
                    </li>
                    <li class="header-cta-item">
                      <button class="active">Login</button>
                    </li>
                  </ul>
                  <!-- <ul class="header-social footer-social visible-s">
                    <li>
                      <a href="#!">
                        <img src="./images/PC_index/header-icon-fb.svg" alt="" />
                      </a>
                    </li>
                    <li>
                      <a href="#!">
                        <img src="./images/PC_index/header-icon-tt.svg" alt="" />
                      </a>
                    </li>
                  </ul> -->
                </div>
            </div>
        </header>
        <main>  
            <section class="banner">
                <div class="banner-sidebar">
                    <ul class="tab-list ">
                        @foreach (var obj in lstSolution)
                        {
                            countTabItem++;
                            if(countTabItem == 1)
                            {
                                <li class="tab-item active">@obj.Name</li>
                            } else
                            {
                                <li class="tab-item">@obj.Name</li>
                            }

                        }
                    </ul>
                </div>
                <div class="banner-content">
                    <div class="banner-main">
                        <ul class="banner-list">
                           @foreach (var obj in lstSolution)
                            {
                                countBannerItem++;
                                if(countBannerItem == 1)
                                {
                                    <li class="banner-item active">
                                        <div class="banner-text">
                                            <div > <label class="banner-text-top">@obj.Name</label> </div>
                                            <div class="banner-text-mid">@obj.Title</div>
                                            @*<div class="banner-text-mid"><span class="banner-text-mid-blue">Lending</span> and <span class="banner-text-mid-blue">Loan</span> Services</div>*@
                                            <div class="banner-text-bot">
                                                @obj.Description
                                            </div>
                                        </div>
                                        <div class="banner-img">
                                            <img src="@obj.Thumb" alt=""   />
                                        </div>
                                    </li>
                                } else
                                {
                                    <li class="banner-item">
                                        <div class="banner-text">
                                            <div > <label class="banner-text-top">@obj.Name</label> </div>
                                            <div class="banner-text-mid"> @obj.Title</div>
                                            <div class="banner-text-bot">
                                                @obj.Description
                                            </div>
                                        </div>
                                        <div class="banner-img">
                                            <img src="@obj.Thumb" alt="">
                                        </div>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="banner-thumb">
                        <ul class="thumb-list">
                           @foreach (var obj in lstSolution)
                            {
                                countThumbItem++;
                                if(countThumbItem == 1)
                                {
                                    <li class="thumb-item active">
                                        <div class="thumb-wrap">
                                            <div class="thumb-img">
                                                <img src="@obj.Thumb" alt="">
                                            </div>
                                            <div class="thumb-content">
                                                <div class="thumb-title">
                                                    @*<span class="thumb-title-blue">Lending</span>  and <span  class="thumb-title-blue">Loan</span> Services*@
                                                    @obj.Title
                                                </div>                                        
                                                <div class="thumb-text">
                                                    @obj.Description                                                    
                                                </div>
                                                <div class="thumb-readmore" onclick="window.open('@obj.MainContent', '_blank');">
                                                    Read more <i class="fa fa-angle-double-right" ></i>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                } else
                                {
                                    <li class="thumb-item">
                                        <div class="thumb-wrap">
                                            <div class="thumb-img">
                                                <img src="@obj.Thumb" alt="">
                                            </div>
                                            <div class="thumb-content">
                                                <div class="thumb-title">
                                                    @obj.Title
                                                </div>                                        
                                                <div class="thumb-text">
                                                    @obj.Description                                                    
                                                </div>
                                                <div class="thumb-readmore" onclick="window.open('@obj.MainContent', '_blank');">
                                                    Read more <i class="fa fa-angle-double-right" ></i>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                }

                            }
                        </ul>
                    </div>
                </div>
            </section>
        </main>
    </div>
    <script src="./js/tabsolution.js"></script>
    <script src="./js/app.js"></script>
</body>
</html>
